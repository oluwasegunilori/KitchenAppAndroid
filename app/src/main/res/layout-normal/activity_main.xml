<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ress"

    tools:context="com.example.changeme.kitchenapp.MainActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99FFFFFF">

    <ImageView
        android:id="@+id/imagesignup"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"

        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:src="@drawable/reee"

        />

    <LinearLayout
        android:id="@+id/in"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="#0000FFFF"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:weightSum="1.0">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="#000FFFFF"
            android:backgroundTint="#000FFFFF"
            android:elevation="30dp"
            android:fadingEdgeLength="@dimen/bottom_ellipsis_height"
            app:cardElevation="30dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000FFFFF"
                >

                <info.hoang8f.widget.FButton
                    android:id="@+id/btnSignupm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnSignIn"
                    android:layout_margin="8dp"
                    android:layout_marginTop="40dp"
                    android:shadowColor="@android:color/black"
                    android:text="Sign Up"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    app:cornerRadius="4dp"
                    app:fButtonColor="@color/colorPrimary"
                    app:shadowEnabled="true"
                    app:shadowHeight="5dp" />

                <info.hoang8f.widget.FButton
                    android:id="@+id/btnSignIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:shadowColor="@android:color/black"
                    android:text="Sign In"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    app:cornerRadius="4dp"
                    app:fButtonColor="@color/colorPrimary"
                    app:shadowEnabled="true"
                    app:shadowHeight="5dp"


                    />


            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>







    <include layout="@layout/error"/>


<LinearLayout
    android:id="@+id/progress"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000FFFFF"
    android:orientation="vertical"
      android:visibility="gone"
   >
    <ProgressBar
        android:id="@+id/linprogress"
        style="@android:style/Widget.Holo.ProgressBar.Large"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:tooltipText="loading"

        />

</LinearLayout>

</RelativeLayout>

</RelativeLayout>
