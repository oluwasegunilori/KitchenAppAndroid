<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.changeme.kitchenapp.ScrollingActivity"
    tools:showIn="@layout/activity_scrolling">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/bName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="#9e9e9e"
            android:padding="2dp">
            <TextView
                android:id="@+id/bname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Name"
                android:textColor="@color/colorPrimaryDark"
                />

        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:id="@+id/cDept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bName"
            android:layout_marginTop="4dp"
            android:padding="2dp">

            <TextView
                android:id="@+id/sdept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Dept"
                android:textColor="@color/colorPrimaryDark"
                />
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/cLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cDept"
            android:layout_marginTop="4dp"
            android:padding="2dp">

            <TextView
                android:id="@+id/slevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"

                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"

                android:text="Level"
                android:textColor="@color/colorPrimaryDark"
                />
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/cAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cLevel"
            android:layout_marginTop="4dp"
            android:padding="2dp">


            <TextView
                android:id="@+id/saddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"

                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"

                android:text="Address"

                android:textColor="@color/colorPrimaryDark"
                />
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/cBirthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cAddress"
            android:layout_marginTop="4dp"
            android:padding="2dp">

            <TextView
                android:id="@+id/sbirthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"

                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"

                android:text="Birthday"

                android:textColor="@color/colorPrimaryDark"
                />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cBirthday"
            android:layout_marginTop="4dp"
            android:padding="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/sphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"

                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"

                    android:text="Phone No"                />

                <ImageButton
                    android:id="@+id/btnphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sphone"
                    android:layout_alignLeft="@id/sphone"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#009688"
                    android:src="@drawable/ic_star_empty_48dp"
                    />

                <ImageButton
                    android:id="@+id/btnmessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sphone"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_toRightOf="@+id/btnphone"
                    android:background="#009688"
                    android:src="@drawable/ic_chat_black_24dp"
                    />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cPhone"
            android:layout_marginTop="4dp"
            android:padding="2dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/semail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"

                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"

                    android:text="Email"
                    android:textColor="@color/colorPrimaryDark"                />


                <ImageButton
                    android:id="@+id/btnemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/semail"
                    android:layout_alignLeft="@+id/semail"
                    android:layout_marginBottom="5dp"
                    android:background="#009688"
                    android:src="@drawable/ic_contact_mail_black_24dp"

                    />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>
