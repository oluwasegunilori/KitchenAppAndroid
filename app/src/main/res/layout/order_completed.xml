<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ordercompleted"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:visibility="gone"

    >




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"


        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="22dp"
        >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="30dp"

        android:padding="10dp"
        app:cardElevation="30dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <ImageView
        android:id="@+id/ordercomplete"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/no_result"

        />

    <TextView
        android:id="@+id/notifytitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ordercomplete"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="Order has been completed"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notifytitle"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:text="@string/notify"

        android:textColor="@android:color/black"
        />
            <TextView
                android:id="@+id/buq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/notify"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"

                android:maxLines="2"
                android:paddingLeft="13dp"
                android:paddingTop="10dp"
                android:paddingRight="13dp"
                android:text="Your Order Number: "
                android:textColor="@android:color/black"

                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/ordernumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buq"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:maxLines="2"
                android:paddingLeft="13dp"
                android:paddingTop="10dp"
                android:paddingRight="13dp"
                android:text="..."

                android:textColor="@android:color/black"
                />

            <ImageView
                android:id="@+id/face"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ordernumber"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:src="@drawable/ic_tag_faces_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/face"
                android:layout_centerHorizontal="true"
                android:text="Than You !!!!"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>

        </RelativeLayout>



    </android.support.v7.widget.CardView>
    </LinearLayout>


    <Button
        android:id="@+id/myOrders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/colorPrimary"
        android:text="Go to Orders"


        android:textColor="#fff"

        />



</RelativeLayout>